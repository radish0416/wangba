.container { padding: 12px; }
.banner { height: 120px; background: #f2f3f5; border-radius: 8px; display: flex; align-items: center; justify-content: center; color: #888; }
.section-title { margin: 12px 0; font-weight: 600; }
.grid { display: flex; flex-wrap: wrap; gap: 12px; }
.card { width: calc(50% - 6px); background: #fff; border: 1px solid #eee; border-radius: 8px; padding: 8px; box-sizing: border-box; }
.cover { width: 100%; height: 100px; background: #f7f8fa; border-radius: 6px; }
.name { margin: 6px 0; }
.price { color: #f56c6c; margin-bottom: 6px; }

